@model IEnumerable<LZRNS.DomainModel.Models.Player>

@{
    Layout = "Partials/Shared/_ManagmentLayout.cshtml";
    ViewBag.Title = "Igrači";
}
<p>
    <button class="open-add-modal btn btn-primary">Dodaj novog igrača</button>
</p>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Igrači
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Ime i prezime
                        </th>
                        <th>
                            Visina
                        </th>
                        <th>
                            Tezina
                        </th>
                        <th>
                            Godiste
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            Ime i prezime
                        </th>
                        <th>
                            Visina
                        </th>
                        <th>
                            Tezina
                        </th>
                        <th>
                            Godiste
                        </th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="open-edit-modal" data-id="@item.Id" data-name="@item.Name" data-lastname="@item.LastName" data-middlename="@item.MiddleName"
                            data-height="@item.Height" data-weight="@item.Weight" data-year="@item.YearOfBirth">
                            <td>
                                @Html.DisplayFor(modelItem => item.GetFullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Height)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Weight)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.YearOfBirth)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">LZRNS - administracija igrača</div>
</div>

@{Html.RenderPartial("/Views/Partials/EditEntities/_EditPlayer.cshtml");}
@{Html.RenderPartial("/Views/Partials/AddEntities/_AddPlayer.cshtml");}
@{Html.RenderPartial("/Views/Partials/DeleteEntities/_DeletePlayer.cshtml");}




@section styles {
    <link href="~/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
}
@section scripts {
    <script>
        $('.open-edit-modal').dblclick(function () {
            var _self = $(this);

            $('#playerId').val(_self.data("id"));
            $('#name').val(_self.data("name"));
            $('#lastname').val(_self.data("lastname"));
            $('#middlename').val(_self.data("middlename"));
            $('#height').val(_self.data("height"));
            $('#weight').val(_self.data("weight"));
            $('#year').val(_self.data("year"));

            $('#editModal').modal('toggle');
        });

        $('.open-add-modal').click(function () {
            var _self = $(this);

            $('#addModal').modal('toggle');
        });

        $('.delete-item').click(function () {
            var _self = $(this);

            var playerId = $('#playerId').val();
            $('#deleteFormId').val(playerId);
            $('#itemName').text($('#name').val() + " " + $('#lastname').val());
            $('#confirm-delete').modal('toggle');
        });
</script>

}
