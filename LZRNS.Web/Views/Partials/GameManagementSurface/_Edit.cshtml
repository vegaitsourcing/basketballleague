@model LZRNS.DomainModel.Models.Game
@using LZRNS.Web.Controllers.Management

@using (Ajax.BeginForm(nameof(GameManagementSurfaceController.Edit), nameof(GameManagementSurfaceController).RemoveControllerSuffix(), null,new AjaxOptions{HttpMethod = "POST", OnSuccess = "location.reload()"}))
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(x => x.Id)
	@Html.HiddenFor(x => x.RoundId)
	@Html.HiddenFor(x => x.SeasonId)
	<i class="fa fa-fw fa-backward" id="back" style="cursor:pointer;"></i>
	<div class="modal-body">
		<div class="row">
			<div class="col-md-3">
				<div class="row mr-3 mb-3">
					@Html.LabelFor(x => x.DateTime, new { @class = "control-label" })
					<div class='input-group date' id='wat'>
						@Html.TextBoxFor(x => x.DateTime, new { @class = "form-control" })
						<span class="input-group-addon">
							<span class="glyphicon glyphicon-calendar"></span>
						</span>
					</div>
					@Html.ValidationMessageFor(x => x.DateTime, null, new { @class = "text-danger" })
					<script>
						$(function () {
							$('#wat').datetimepicker({
								locale: 'sr'
							});
						});
					</script>
				</div>
				<div class="row mr-3 mb-3">
					@Html.LabelFor(x => x.TeamAId, new { @class = "control-label" })
					@Html.DropDownListFor(x => x.TeamAId, Model.Teams, "Izaberite drugi tim", new { @class = "form-control" })
					@Html.ValidationMessageFor(x => x.TeamAId, null, new { @class = "text-danger" })
				</div>
				<div class="row mr-3 mb-3">
					@Html.LabelFor(x => x.TeamBId, new { @class = "control-label" })
					@Html.DropDownListFor(x => x.TeamBId, Model.Teams, "Izaberite drugi tim", new { @class = "form-control" })
					@Html.ValidationMessageFor(x => x.TeamBId, null, new { @class = "text-danger" })
				</div>

			</div>
		</div>
	</div>
	<div class="modal-footer">
		<button type="submit" class="btn btn-primary"><i class="fa fa-fw fa-save"></i>Sačuvaj</button>
		<button class="btn btn-danger btn-delete" data-leagueId="@Model.Id"><i class="fa fa-fw fa-trash"></i>Obriši</button>
	</div>
}
