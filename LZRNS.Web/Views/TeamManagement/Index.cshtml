@model TeamManagementModel
@using LZRNS.Web.Controllers.Management
@{
	Layout = "~/Views/Partials/Shared/_ManagmentLayout.cshtml";
}

<p>
	<button class="open-add-modal btn btn-primary">Dodaj nov tim</button>
</p>
<div class="card mb-3">
	<div class="card-header">
		<i class="fa fa-@Model.MenuIconStyle"></i> @Model.PageTitle
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th>Slika</th>
						<th>Naziv tima</th>
						<th>Liga u sezoni</th>
						<th>Trener</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.Teams)
					{
						<tr class="open-edit-modal" data-teamId="@item.Id">
							<td class="text-center">
								<img class="img-responsive" src="@item.Image" width="50" height="50" style="border-radius:50%;background-color:#dee2e6;" />
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.TeamName)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.LeagueSeason.FullName)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Coach)
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
	<div class="card-footer small text-muted">LZRNS - @Model.PageTitle</div>
</div>

@section scripts{
	<script>
		controller = {
			addAction: '@(Url.Action<TeamManagementSurfaceController>(c => c.Add()))',
			editAction: '@(Url.Action<TeamManagementSurfaceController>(c => c.Edit(null)))',
			deleteAction: '@(Url.Action<TeamManagementSurfaceController>(c => c.Delete(new Guid())))',
			addPlayerToTeamAction: '@(Url.Action<TeamManagementSurfaceController>(c => c.AddPlayerToTeam(new Guid(), new Guid())))',
			deleteTeamMemberAction: '@(Url.Action<TeamManagementSurfaceController>(c => c.DeleteTeamMember(new Guid())))'
		}
	</script>
	}