@model LZRNS.DomainModel.Models.Season
<div class="modal" tabindex="-1" role="dialog" id="editModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Izaberite ligu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Hidden("Id", null, new { id = "seasonId" })
                @foreach(var league in Model.LeagueSeasons ?? Enumerable.Empty<LZRNS.DomainModels.Models.LeagueSeason>())
                {
                    <a href="#">@league.League.Name</a>
                }
                <a href="#">Dodaj novu ligu u sezonu</a>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger delete-item"><i class="fa fa-fw fa-trash"></i>Obriši sezonu</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-fw fa-close"></i> Zatvori</button>
            </div>
        </div>
    </div>
</div>

