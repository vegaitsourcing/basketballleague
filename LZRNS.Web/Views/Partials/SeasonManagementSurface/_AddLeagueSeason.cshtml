@model LZRNS.DomainModels.Models.LeagueSeason
@using LZRNS.Web.Controllers.Management


<div class="modal-dialog" role="document">
	<div class="modal-content">
		@using (Ajax.BeginForm(nameof(SeasonManagementSurfaceController.AddLeagueSeason), nameof(SeasonManagementSurfaceController).RemoveControllerSuffix(), null, new AjaxOptions { HttpMethod = "POST", OnComplete = $"leagueSeasonSuccess" }))
		{
			@Html.AntiForgeryToken()
			@Html.HiddenFor(x => x.LeagueId)
			@Html.HiddenFor(x => x.SeasonId)
			<div class="modal-header">
				<h5 class="modal-title">Dodavanje lige u sezonu</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-md-10">
						@Html.LabelFor(x => x.Summary, new { @class = "control-label" })
						@Html.TextAreaFor(x => x.Summary, new { @class = "form-control" })
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="submit" class="btn btn-primary"><i class="fa fa-fw fa-save"></i>Dodaj ligu u sezonu</button>
			</div>
		}
	</div>
</div>
