@model LZRNS.Models.ViewModel.RoundManagementSurfaceViewModel
@using LZRNS.Web.Controllers.Management

<div class="modal-dialog" role="document">
    <div class="modal-content">
        @using (Ajax.BeginForm(nameof(RoundManagementSurfaceController.Add), nameof(RoundManagementSurfaceController).RemoveControllerSuffix(), null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "location.reload()" }))
        {
            @Html.AntiForgeryToken()
            <div class="modal-header">
                <h5 class="modal-title">Generisanje rundi</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(x => x.LeagueSeasonId, new { @class = "control-label col-md-8" })
                        <div class="col-md-12 mb-3">
                            @Html.DropDownListFor(x => x.LeagueSeasonId, Model.LeagueSeasons, "Izaberite ligu u sezoni", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.LeagueSeasonId, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.FirstRoundStartDate, "Datum početka prve runde", new { @class = "control-label col-md-8" })
                        <div class="col-md-12 mb-3">
                            @Html.TextBoxFor(m => m.FirstRoundStartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                            @Html.ValidationMessageFor(x => x.FirstRoundStartDate, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.RoundStartTime, "Satnica početka svake runde", new { @class = "control-label col-md-8" })
                        <div class="col-md-12 mb-3">
                            @Html.EditorFor(x => x.RoundStartTime, new { type = "time", htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(x => x.RoundStartTime, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.IntervalBetweenRoundsInDays, "Interval između rundi u danima", new { @class = "control-label col-md-8" })
                        <div class="col-md-12 mb-3">
                            @Html.EditorFor(x => x.IntervalBetweenRoundsInDays, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(x => x.IntervalBetweenRoundsInDays, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.IntervalBetweenGamesInMinutes, "Interval između rundi u minutima", new { @class = "control-label col-md-8" })
                        <div class="col-md-12 mb-3">
                            @Html.EditorFor(x => x.IntervalBetweenGamesInMinutes, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(x => x.IntervalBetweenGamesInMinutes, null, new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary green-save-button"><i class="fa fa-fw fa-save"></i>Dodaj</button>
            </div>
        }
    </div>
</div>